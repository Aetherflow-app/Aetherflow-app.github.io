    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const generateBtn = document.getElementById('generate-btn');
            const promptInput = document.getElementById('prompt-input');
            const promptOutput = document.getElementById('prompt-output');
            const usageLimitMessage = document.getElementById('usage-limit-message');

            const usageKey = 'aetherflow_generator_usage';
            const maxUsage = 3;
            const apiUrl = 'https://ai-proxy-service-423266303314.us-west2.run.app/api/proxy/qwen';

            function checkUsage() {
                const currentUsage = parseInt(localStorage.getItem(usageKey) || '0', 10);
                if (currentUsage >= maxUsage) {
                    promptInput.disabled = true;
                    generateBtn.disabled = true;
                    generateBtn.textContent = 'Usage Limit Reached';
                    usageLimitMessage.textContent = 'You have used all your free generations. Please install the extension for unlimited use.';
                    usageLimitMessage.style.display = 'block';
                    return false;
                }
                return true;
            }

            async function handleGeneration() {
                if (!checkUsage()) return;

                const content = promptInput.value.trim();
                if (!content) {
                    promptOutput.value = 'Please enter some text to get started.';
                    return;
                }

                generateBtn.disabled = true;
                generateBtn.textContent = 'Optimizing...';
                promptOutput.value = '';

                try {
                    const response = await fetch(apiUrl, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({
                            content: content,
                            mode: 'universal' // As per requirement
                        }),
                    });

                    if (!response.ok) {
                        throw new Error(`API error: ${response.statusText}`);
                    }

                    const data = await response.json();
                    promptOutput.value = data.optimized_content || 'Sorry, we couldn\'t optimize this prompt. Please try a different one.';
                    
                    // Increment usage on successful generation
                    const currentUsage = parseInt(localStorage.getItem(usageKey) || '0', 10);
                    localStorage.setItem(usageKey, (currentUsage + 1).toString());

                } catch (error) {
                    console.error('Generation failed:', error);
                    promptOutput.value = 'An error occurred. Please try again later.';
                } finally {
                    generateBtn.disabled = false;
                    generateBtn.textContent = 'Generate Optimized Prompt';
                    checkUsage(); // Re-check to disable if limit is now reached
                }
            }
            
            generateBtn.addEventListener('click', handleGeneration);
            
            // Initial check when the page loads
            checkUsage();
        });
    </script>
